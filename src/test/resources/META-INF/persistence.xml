<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="io.github.vicen621.volveacasa.jpa">
        <class>io.github.vicen621.volveacasa.entities.Avistamiento</class>
        <class>io.github.vicen621.volveacasa.entities.Mascota</class>
        <class>io.github.vicen621.volveacasa.entities.Medalla</class>
        <class>io.github.vicen621.volveacasa.entities.Mensaje</class>
        <class>io.github.vicen621.volveacasa.entities.Usuario</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value="sa"/>

            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>