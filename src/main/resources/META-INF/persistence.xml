<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="io.github.vicen621.volveacasa.jpa" transaction-type="RESOURCE_LOCAL">
        <class>io.github.vicen621.volveacasa.persistence.entities.Avistamiento</class>
        <class>io.github.vicen621.volveacasa.persistence.entities.Mascota</class>
        <class>io.github.vicen621.volveacasa.persistence.entities.Medalla</class>
        <class>io.github.vicen621.volveacasa.persistence.entities.Mensaje</class>
        <class>io.github.vicen621.volveacasa.persistence.entities.Usuario</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/grupo01?useSSL=false&amp;serverTimezone=GMT-3&amp;allowPublicKeyRetrieval=true" />
            <property name="jakarta.persistence.jdbc.user" value="admin"/>
            <property name="jakarta.persistence.jdbc.password" value="admin"/>

            <!-- Automatically export the schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>

            <property name="hibernate.hbm2ddl.auto" value="create"/> <!-- (create, create-drop, update) -->
        </properties>

    </persistence-unit>

</persistence>